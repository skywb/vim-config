{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "h", "hpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls-cache",
					 "format": "binary"
         } ,
				"clang.resourceDir": ["/usr/include", "/usr/local/include", "~/clang+llvm-8"]
       }
    }
  },
  "cacheFormat": "json",
  "suggest.noselect": true,
  "suggest.echodocSupport": true,
  "suggest.enablePreview":true,
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.hoverTarget": "float",
  "signature.enable":true,
  "snippets.ultisnips.directories": [
  	"UltiSnips",
	"~/.vim/snippets/vim-snippet/"
  ],
  "coc.preferences.rootPatterns": [".vim","compile_commands.json", ".git",".hg",".projections.json", ".projcet"],
  "json.format.enable": true
}
